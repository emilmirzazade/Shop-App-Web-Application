@model CardModel

<h1 class="h3">Shopping Card</h1>
<hr />

@if (Model.CardItems.Count == 0)
{


    <div class="row">
        <div class="col-12">
            <div class="alert alert-warning">
                You have no product in your basket
            </div>
        </div>
    </div>
}
else
{

    <div class="row">
        <div class="col-md-8">
            <div class="text-left">
                <h4>Card Items</h4>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th></th>
                        <th>Product name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CardItems)
                    {
                        <tr>
                            <td>
                                <img src="~/img/@item.ImageUrl" width="80" alt="" />
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>@item.Quantity</td>
                            <td>@(item.Quantity * item.Price)</td>
                            <td>

                                <form asp-controller="Card" asp-action="DeleteFromCard" method="post">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <button class="btn btn-danger btn-sm">
                                        <i class="fa fa-times fa-fw"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="col-md-4">
            <div class="text-left">
                <h4>Card Summary</h4>
            </div>
            <table class="table">
                <tr>
                    <th>Card Total</th>
                    <td>@Model.TotalPrice().ToString("c")</td>
                </tr>
                <tr>
                    <th>Shipping</th>
                    <th>Free</th>
                </tr>
                <tr>
                    <th>Order Total</th>
                    <td>@Model.TotalPrice().ToString("c")</td>
                </tr>
            </table>
            <div class="text-center">
                <a href="/" class="btn btn-primary">
                    <i class="fa fa-arrow-circle-left fa-fw"></i>Continue shopping
                </a>
                <a asp-controller="Card" asp-action="Checkout" class="btn btn-primary">
                    <i class="fa fa-arrow-circle-right fa-fw"></i>Checkout
                </a>
            </div>
        </div>
    </div>
}
